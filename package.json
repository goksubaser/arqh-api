{
  "name": "arqh-case-goksu-baser",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo with Fastify API and Next.js frontend",
  "workspaces": [
    "apps/api",
    "apps/web",
    "apps/worker",
    "packages/types",
    "packages/db"
  ],
  "scripts": {
    "dev:api": "npm run dev -w api",
    "dev:web": "npm run dev -w web",
    "dev:worker": "npm run dev -w worker",
    "docker": "docker compose up --build",
    "docker:db": "docker compose up -d mongo redis worker",
    "docker:down": "docker compose down -v --rmi all",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build -w api",
    "build:web": "npm run build -w web",
    "build:worker": "npm run build -w worker",
    "start:api": "npm run start -w api",
    "start:web": "npm run start -w web",
    "start:worker": "npm run start -w worker",
    "lint": "npm run lint --workspaces --if-present"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}