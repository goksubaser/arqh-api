{
  "name": "arqh-case-goksu-baser",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo with Fastify API and Next.js frontend",
  "workspaces": [
    "apps/api",
    "apps/web",
    "packages/types"
  ],
  "scripts": {
    "dev:api": "npm run dev -w api",
    "dev:web": "npm run dev -w web",
    "docker": "docker compose up --build",
    "docker:db": "docker compose up -d mongo redis",
    "docker:down": "docker compose down -v",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build -w api",
    "build:web": "npm run build -w web",
    "start:api": "npm run start -w api",
    "start:web": "npm run start -w web",
    "lint": "npm run lint --workspaces --if-present"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}